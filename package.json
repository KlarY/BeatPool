{
  "private": true,
  "scripts": {
    "pretest": "./node_modules/typescript/bin/tsc test/**/*Test.ts --module commonjs --moduleResolution node",
    "test": "mocha --recursive",
    "postinstall": "install-app-deps",
    "start": "npm install && npm run compile && ./node_modules/.bin/electron ./app",
    "compile": "gulp default",
    "pack": "npm run compile && build --dir",
    "dist": "npm run compile && build",
    "release": "npm run compile && build"
  },
  "build": {
    "appId": "org.dapudapu.dapu",
    "category": "public.app-category.editor",
    "dmg": {
      "window": {
        "size": {
          "width": 350,
          "height": 220
        }
      },
      "contents": [
        {
          "x": 200,
          "y": 100,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 50,
          "y": 100,
          "type": "file"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/electron": "^1.3.22",
    "@types/mocha": "^2.2.32",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "electron": "1.4.1",
    "electron-builder": "next",
    "gulp": "^3.9.1",
    "gulp-sass": "^2.3.2",
    "gulp-typescript": "^3.0.2",
    "mocha": "^3.1.0",
    "tsify": "^1.0.8",
    "typescript": "^2.0.3",
    "vinyl-source-stream": "^1.1.0"
  },
  "dependencies": {
    "@types/jquery": "^2.0.32",
    "@types/keyboardjs": "^2.2.29",
    "@types/lodash": "^4.14.36",
    "jquery": "^3.1.1",
    "keyboardjs": "^2.3.1",
    "lodash": "^4.16.3"
  }
}
